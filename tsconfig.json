{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "incremental": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2018",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist/**/*"
  ],
  "paths": {
    "*": [
      "node_modules/*",
      "src/types/*"
    ],
  },
  "plugins": [
    {
      "name": "typescript-tslint-plugin"
    }
  ],
}